document.addEventListener('DOMContentLoaded', function() {
    var submenuToggle = document.querySelector('.has-submenu > a');
    var submenu = document.querySelector('.has-submenu .submenu');

    submenuToggle.addEventListener('click', function(event) {
        event.preventDefault();
        submenu.classList.toggle('open');
    });
});
document.getElementById('vaciar-carrito').addEventListener('click', function() {
    if (confirm('¿Estás seguro de que quieres vaciar el carrito?')) {
        fetch('vaciar_carrito.php', {
            method: 'POST'
        })
        .then(response => response.text())
        .then(data => {
            window.location.href = 'index.php'; // Recargar la página para reflejar los cambios
        })
        .catch(error => console.error('Error:', error));
    }
});

